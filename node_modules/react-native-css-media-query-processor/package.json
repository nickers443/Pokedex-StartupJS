{
  "name": "react-native-css-media-query-processor",
  "version": "0.21.3",
  "description": "Match style objects containing CSS Media Queries with React Native",
  "main": "dist/index.js",
  "scripts": {
    "size": "size-limit",
    "prepublish": "npm run build",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --ignore src/__tests__,src/__mocks__",
    "precommit": "lint-staged",
    "release": "npmpub",
    "benchmark": "yarn build && node benchmark.js",
    "test": "jest"
  },
  "author": "Krister Kari",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "!**/__tests__",
    "!**/__mocks__",
    "!**/perf-tests",
    "CHANGELOG.md",
    "README.md"
  ],
  "keywords": [
    "React",
    "ReactNative",
    "react-native",
    "styles",
    "CSS",
    "Media Queries"
  ],
  "bugs": {
    "url": "https://github.com/kristerkari/react-native-css-media-query-processor/issues"
  },
  "homepage": "https://github.com/kristerkari/react-native-css-media-query-processor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kristerkari/react-native-css-media-query-processor.git"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "deepmerge": "^3.2.0",
    "micro-memoize": "^3.0.1"
  },
  "peerDependencies": {
    "react-native": ">=0.45.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-jest": "^24.1.0",
    "benchmark": "^2.1.4",
    "coveralls": "^3.0.3",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "npmpub": "^4.1.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "size-limit": "^0.21.1"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "limit": "3 KB",
      "path": "src/index.js"
    }
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  }
}
